<h1><%= @restaurant.name %></h1>
      <hr>
      <p> Address: <%= @restaurant.address %> </p>
      <hr>
      <p> Phone: <%= @restaurant.phone_number %> </p>
      <hr>
      <p> Category: <%= @restaurant.category %> </p>
      <hr>

<p><%= link_to "Edit", edit_restaurant_path(@restaurant) %></p>
<p><%= link_to "Delete", restaurant_path(@restaurant), method: :delete %></p>

<h4>Reviews: </h4>
<% @restaurant.reviews.each do |review| %>
  <li> "<%= review.content %>" | <%= review.rating %></li>
  <% end %>
  <br><br>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant)%>
  <i class ="fa fa-comment"></i>
  <ul>
  <% @restaurant.reviews.each do |review| %>
  <li><%= review.content %></li>
  <% end %>
  </ul>
